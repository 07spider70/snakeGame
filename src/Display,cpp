Display::Display((PinName RST, PinName CS, PinName DC, PinName MOSI, PinName SCLK,
          PinName LED ): Adafruit_GFX(LCDWIDTH,LCDHEIGHT) {
      _din = -1;
      _sclk = -1;
      _dc = 1;
      _rst = 1;
      _cs = 1;
      _led = 1;
    myPins.rst  = RST;
    myPins.sce  = CS;
    myPins.dc   = DC;
    myPins.mosi = MOSI;
    myPins.miso = NC;
    myPins.sclk = SCLK;
    myPins.LED = LED;
}
